
<h1>Edit the student</h1>
<%if flash[:errors]%>
    <% flash[:errors].each do |e| %>
            <li> <%=e%></li>
    <%end%>
<%end%>


<%=form_for @student do |f|%>

<%=f.label :name%>
<%=f.text_field :name%>
<%=f.label :age%>
<%=f.number_field :age%>
<%=f.label :major%>
<%=f.text_field :major%>
<br>
<%=f.collection_select :instructor_id, Instructor.all, :id, :name%>

<%=f.submit%>

<%end%>